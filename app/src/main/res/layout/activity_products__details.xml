<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products_Details">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:     "
                android:id="@+id/name1"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/name1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Weight:   "
                android:id="@+id/weight1"
                android:textSize="30dp"
                android:layout_below="@id/name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weight"
                android:textSize="30dp"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/weight1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MRP:       "
                android:id="@+id/mrp1"
                android:textSize="30dp"
                android:layout_below="@id/weight"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mrp"
                android:textSize="30dp"
                android:layout_below="@id/weight"
                android:layout_toRightOf="@id/mrp1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:            "
                android:id="@+id/id1"
                android:textSize="30dp"
                android:layout_below="@id/mrp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id2"
                android:textSize="30dp"
                android:layout_below="@id/mrp"
                android:layout_toRightOf="@id/id1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: "
                android:id="@+id/quantity1"
                android:textSize="30dp"
                android:layout_below="@id/id2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quantity"
                android:textSize="30dp"
                android:layout_below="@id/id2"
                android:layout_toRightOf="@id/quantity1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:       "
                android:id="@+id/date1"
                android:textSize="30dp"
                android:layout_below="@id/quantity"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:textSize="30dp"
                android:layout_below="@id/quantity"
                android:layout_toRightOf="@id/date1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacture:"
                android:id="@+id/manufacture1"
                android:textSize="30dp"
                android:layout_below="@id/date"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/manufacture"
                android:textSize="30dp"
                android:layout_below="@id/date"
                android:layout_toRightOf="@id/manufacture1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry:       "
                android:id="@+id/expiry1"
                android:textSize="30dp"
                android:layout_below="@id/manufacture"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expiry"
                android:textSize="30dp"
                android:layout_below="@id/manufacture"
                android:layout_toRightOf="@id/expiry1"/>


        </RelativeLayout>

</ScrollView>