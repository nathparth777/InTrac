<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModifyProduct">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Id1"
                android:text="Id:    "
                android:textSize="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Id"
                android:textSize="30dp"
                android:layout_toRightOf="@id/name1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name1"
                android:text="Name:    "
                android:textSize="30dp"
                android:layout_below="@+id/Id"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="20dp"
                android:layout_below="@id/Id"
                android:layout_toRightOf="@id/name1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weight1"
                android:text="Weight:  "
                android:textSize="30dp"
                android:layout_below="@id/name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weight"
                android:textSize="30dp"
                android:layout_toRightOf="@id/weight1"
                android:layout_below="@id/name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mrp1"
                android:text="MRP:      "
                android:textSize="30dp"
                android:layout_below="@id/weight"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mrp"
                android:textSize="20dp"
                android:layout_toRightOf="@id/mrp1"
                android:layout_below="@id/weight"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quantity1"
                android:text="Quantity:"
                android:textSize="30dp"
                android:layout_below="@id/mrp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quantity"
                android:textSize="30dp"
                android:layout_toRightOf="@id/quantity1"
                android:layout_below="@id/mrp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add/Remove product:"
                android:textSize="30dp"
                android:id="@+id/addremove"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/quantity"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/addremove"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/updateval"
                android:textSize="20dp"
                android:inputType="number"
                android:layout_below="@id/addremove"
                android:layout_toRightOf="@id/spinner"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update"
                android:text="Update"
                android:textSize="25dp"
                android:textAllCaps="false"
                android:layout_below="@+id/updateval"
                android:layout_marginTop="15dp"/>


        </RelativeLayout>



</ScrollView>